@model Joueur

<h2>Supprimer le joueur #@Model.Id</h2>

<div class="alert alert-warning" role="alert">
    Êtes-vous sûr de vouloir supprimer ce joueur ?
</div>

<form method="post" action="@Url.Action("Supprimer", "Joueur", new { id = Model.Id })">
    <button type="submit" class="btn btn-danger">Confirmer</button>
    <a href="@Url.Action("Index", "Joueur")" class="btn btn-secondary">Annuler</a>
</form>
